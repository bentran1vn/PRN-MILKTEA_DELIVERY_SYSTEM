@page
@model RazorPages.Pages.UserPage

@{
    Layout = "Shared/_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>User Page</title>
</head>
<body>
<div>
    <h2 class="mb-4 ml-2">Account Management</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody id="accountList">
        @foreach (var item in @Model.Users)
        {
            <tr>
                <td>@item.userName</td>
                <td>@item.email</td>
                <td>@item.phoneNumber</td>
                <td>@item.address</td>
                <td>@item.Roles?.roleName</td>
                <td>@item.create_At</td>
                <td>
                    <button class="btn btn-info btn-sm">Detail</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
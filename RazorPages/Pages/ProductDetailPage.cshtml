@page
@model RazorPages.Pages.ProductDetailPage

@{
    Layout = "Shared/_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <h2 class="mb-4">Product Detail</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ProductModel.ProductName">Product Name:</label>
            <input type="text" class="form-control" asp-for="ProductModel.ProductName" />
            <span asp-validation-for="ProductModel.ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductModel.ProductDescription">Product Description:</label>
            <textarea class="form-control" asp-for="ProductModel.ProductDescription"></textarea>
            <span asp-validation-for="ProductModel.ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductModel.ProductType">Product Type:</label>
            <select class="form-control" asp-for="ProductModel.ProductType">
                <option value="">Select...</option>
                <option value="1">Hot</option>
                <option value="0">Cool</option>
            </select>
            <span asp-validation-for="ProductModel.ProductType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductModel.Price">Price:</label>
            <input type="number" class="form-control" asp-for="ProductModel.Price" step="0.01" />
            <span asp-validation-for="ProductModel.Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductModel.Quantity">Quantity:</label>
            <input type="number" class="form-control" asp-for="ProductModel.Quantity" />
            <span asp-validation-for="ProductModel.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductModel.FileUpload">Change Image:</label>
            <input type="file" class="form-control" asp-for="ProductModel.FileUpload" />
            <span asp-validation-for="ProductModel.FileUpload" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
    </form>
</div>
@section Scripts {
<script>
    $(function () {
        $.validator.unobtrusive.parse('form');
        $('form').removeData('validator').removeData('unobtrusiveValidation');
    });
</script>
}
</body>
</html>